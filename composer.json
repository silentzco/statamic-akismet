{
    "name": "silentz/akismet",
    "description": "Provides Akismet spam filter for form submissions",
    "license": "proprietary",
    "type": "statamic-addon",
    "authors": [
        {
            "name": "Erin Dalzell",
            "email": "erin@silentz.co",
            "homepage": "https://silentz.co",
            "role": "Founder"
        }
    ],
    "require": {
        "php": "^8.3",
        "nickurt/laravel-akismet": "^2.1",
        "pixelfear/composer-dist-plugin": "^0.1.4",
        "statamic/cms": "^6.0"
    },
    "require-dev": {
        "jasonmccreary/laravel-test-assertions": "^2.0",
        "mockery/mockery": "^1.3.1",
        "nunomaduro/collision": "^8.0",
        "orchestra/testbench": "^10.0",
        "phpunit/phpunit": "^12.0",
        "spatie/laravel-ray": "*"
    },
    "autoload": {
        "psr-4": {
            "Silentz\\Akismet\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Silentz\\Akismet\\Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true
        }
    },
    "extra": {
        "download-dist": {
            "path": "resources/dist",
            "url": "https://github.com/silentzco/statamic-akismet/releases/download/{$version}/dist.tar.gz"
        },
        "laravel": {
            "providers": [
                "Silentz\\Akismet\\ServiceProvider"
            ]
        },
        "statamic": {
            "description": "Akismet addon",
            "name": "Akismet"
        }
    }
}
